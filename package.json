{
  "name": "helios360",
  "version": "0.0.1",
  "description": "Helios360: Client Services and Gen-AI Delivery Business Consulting",
  "type": "module",
  "author": {
    "name": "Joe Baker",
    "url": "https://www.jsbaker.co.uk/"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build:full": "(yarn install --immutable-cache) && (yarn sass:build) && (npx @11ty/eleventy --dryrun) && (npx @11ty/eleventy)",
    "util:clean": "npx rimraf -v _site/ src/_includes/assets/css/* content/public/img/* || true",
    "11ty:build": "(yarn sass:build) && (npx @11ty/eleventy --dryrun) && (npx @11ty/eleventy)",
    "11ty:watch": "(yarn util:clean) && (yarn sass:build) && (npx @11ty/eleventy --dryrun) && (npx @11ty/eleventy --watch & yarn sass:watch)",
    "11ty:serve": "(yarn util:clean) && (yarn sass:build) && (npx @11ty/eleventy --dryrun) && (npx @11ty/eleventy --serve & yarn sass:watch)",
    "go": "yarn 11ty:serve",
    "wrangler": "npx wrangler pages dev _site",
    "wrangler:dev": "npx wrangler dev --live-reload",
    "sass:build": "sass --style=expanded ./src/_sass/:./src/_includes/assets/css/ && npx postcss ./src/_includes/assets/css/*.css --use autoprefixer -d ./src/_includes/assets/css",
    "sass:watch": "sass --watch --style=expanded ./src/_sass/:./src/_includes/assets/css/"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.5",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@quasibit/eleventy-plugin-schema": "^1.12.0",
    "autoprefixer": "^10.4.24",
    "clean-css": "^5.3.3",
    "dotenv": "^17.3.1",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "eleventy-plugin-toc": "^1.1.5",
    "html-minifier-terser": "^7.2.0",
    "inspect": "^0.0.2",
    "luxon": "^3.7.2",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-deflist": "^3.0.0",
    "markdown-it-underline": "^1.0.1",
    "minify-xml": "^4.5.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rimraf": "^6.1.2",
    "sass": "^1.97.3",
    "sass-autoprefixer": "^1.0.1",
    "uglify-js": "^3.19.3"
  },
  "dependencies": {
    "@react-email/render": "2.0.4",
    "@types/markdown-it": "^14.1.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "resend": "6.8.0",
    "wrangler": "^4.59.3"
  },
  "packageManager": "yarn@4.12.0"
}
